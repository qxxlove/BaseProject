<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_download"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.baseproject.activity.DownloadActivity">

    <TextView
        android:id="@+id/text_name_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="apk 名称:"
        android:layout_margin="@dimen/dp_10"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/text_progress_apk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载进度："
        android:layout_margin="@dimen/dp_10"
        android:textSize="16sp"
        />
    <ProgressBar
        android:id="@+id/pb_progress_bar_apk"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
        android:id="@+id/text_start_apk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="开始下载"
        android:layout_weight="1"
        android:textSize="18sp"
        android:gravity="center"
        />
        <TextView
        android:id="@+id/text_stop_apk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="暂停下载"
        android:textSize="18sp"
        android:gravity="center"
        />
        <TextView
            android:id="@+id/pb_progress_bar_count_apk"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1%"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
</LinearLayout>
