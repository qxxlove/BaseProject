<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.dell.baseproject.activity.DialogActivity">

      <Button
          android:id="@+id/button_show_dialog"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="弹出dialog(自定义布局)"
          />
      <TextView
          android:id="@+id/text_one_money"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          />
      <TextView
          android:id="@+id/text_two_money"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          />
      <TextView
          android:id="@+id/text_result_money"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          />

      <TextView
          android:id="@+id/text_uri_file"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          />
      <ImageView
          android:id="@+id/image_dou"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/ic_launcher"
          android:layout_gravity="center_horizontal"
          />

      <ImageView
          android:id="@+id/image_location"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@mipmap/ic_launcher"
          />
      <TextView
          android:id="@+id/text_disntance"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          />
      <TextView
          android:id="@+id/text_disntance_one"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          />
</LinearLayout>
